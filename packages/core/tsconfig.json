{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "rootDir": "src",
    "outDir": "dist/test",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "karma.conf.ts",
    "test"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
